<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">




    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >


            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Warm Up"
                        android:textSize="50dp"
                        android:gravity="center"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="@string/Wormup"
                        android:textSize="17dp" />

                    <com.pierfrancescosoffritti.androidyoutubeplayer.core.player.views.YouTubePlayerView
                    android:id="@+id/youtube_player_view1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="120dp"

                    app:autoPlay="false"
                    app:showFullScreenButton="false"
                    app:videoId="rm5dAEpTDTM">


                    </com.pierfrancescosoffritti.androidyoutubeplayer.core.player.views.YouTubePlayerView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="120dp"
                        android:gravity="top"
                        android:layout_gravity="center"
                        android:layout_marginBottom="30dp"
                        android:text="Physical Training Warm Up"
                        android:textSize="30dp"
                        />



                    <com.pierfrancescosoffritti.androidyoutubeplayer.core.player.views.YouTubePlayerView
                        android:id="@+id/youtube_player_view2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        app:autoPlay="false"
                        app:showFullScreenButton="false"
                        app:videoId="CccKtMJkjJM" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="120dp"
                        android:gravity="top"
                        android:layout_gravity="center"
                        android:layout_marginBottom="30dp"
                        android:text="Dribbling Warm up"
                        android:textSize="30dp"
                        />

                    <com.pierfrancescosoffritti.androidyoutubeplayer.core.player.views.YouTubePlayerView
                        android:id="@+id/youtube_player_view5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        app:autoPlay="false"
                        app:showFullScreenButton="false"
                        app:videoId="UT2kWArR7m0" />


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="120dp"
                        android:gravity="top"
                        android:layout_gravity="center"
                        android:layout_marginBottom="30dp"
                        android:text="Shooting and Passing Warm Up"
                        android:textSize="25dp"/>



                </LinearLayout>
            </ScrollView>


        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>


</layout>


