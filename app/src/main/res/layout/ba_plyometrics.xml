<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">




    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >


            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Plyometrics"
                        android:textSize="40dp"
                        android:gravity="center"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="120dp"
                        android:gravity="top"
                        android:text="@string/ply"
                        android:textSize="15dp" />

                    <com.pierfrancescosoffritti.androidyoutubeplayer.core.player.views.YouTubePlayerView
                        android:id="@+id/youtube_player_view1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="120dp"
                        app:autoPlay="false"
                        app:showFullScreenButton="false"
                        app:videoId="u_2YEjKzsvg"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="120dp"
                        android:gravity="top"
                        android:layout_marginBottom="30dp"
                        android:text="3 Best Plyometrics for Basketball Trainingl"
                        android:textSize="30dp" />

                    <com.pierfrancescosoffritti.androidyoutubeplayer.core.player.views.YouTubePlayerView
                        android:id="@+id/youtube_player_view"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        app:autoPlay="false"
                        app:showFullScreenButton="false"
                        app:videoId="PPmvRCO4VWo" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="120dp"
                        android:gravity="top"
                        android:layout_marginBottom="30dp"
                        android:text="Plyometrics and Quickness Drills"
                        android:textSize="30dp" />

                    <com.pierfrancescosoffritti.androidyoutubeplayer.core.player.views.YouTubePlayerView
                        android:id="@+id/youtube_player_view5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        app:autoPlay="false"
                        app:showFullScreenButton="false"
                        app:videoId="GteEqJ6VVug" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="120dp"
                        android:gravity="top"
                        android:layout_marginBottom="30dp"
                        android:text="Plyometric Workouts To Jump Higher"
                        android:textSize="30dp" />

                </LinearLayout>
            </ScrollView>


        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>


</layout>